CTRULIB	:= $(DEVKITPRO)/libctru
INCLUDES = -I./$(PREFIX)/include -I$(CTRULIB)/include

#---------------------------------------------------------------------------------
# options for code generation
#---------------------------------------------------------------------------------
ARCH		:=	-march=armv6k -mtune=mpcore -mfloat-abi=hard
CFLAGS		:=	-g -Wall -O2 -mword-relocations -fno-short-enums \
			-fomit-frame-pointer -ffast-math \
			$(ARCH)
CFLAGS		+=	$(INCLUDES) -DARM11 -D_3DS -D__3DS__ -DSDL_BUILDING_3DS
CXXFLAGS	:=      $(CFLAGS) -fno-rtti -fno-exceptions -std=gnu++11
ASFLAGS		:=	-g $(ARCH)
LDFLAGS		:=	-specs=3dsx.specs -g $(ARCH) -Wl,-Map,$(notdir $*.map)

CFLAGS		+= -Wno-unused-variable

LIBS	:= -lctru -lm

all: $(OBJS) $(TARGET_LIB)

$(TARGET_LIB): $(OBJS)
	$(AR) -rc $@ $^


$(PREFIX)/src/render/3ds/shader_vsh_shbin.h src/render/3ds/shader.vsh.o:
	@python $(AEMSTRO)/aemstro_as.py $(PREFIX)/src/render/3ds/shader.vsh $(PREFIX)/src/render/3ds/shader.vsh.shbin
	@bin2s $(PREFIX)/src/render/3ds/shader.vsh.shbin | $(PREFIX)as -o $@
	@echo "extern const u8" `(echo shader.vsh.shbin | sed -e 's/^\([0-9]\)/_\1/' | tr . _)`"_end[];" > `(echo $(PREFIX)/src/render/3ds/shader.vsh.shbin | tr . _)`.h
	@echo "extern const u8" `(echo shader.vsh.shbin | sed -e 's/^\([0-9]\)/_\1/' | tr . _)`"[];" >> `(echo $(PREFIX)/src/render/3ds/shader.vsh.shbin | tr . _)`.h
	@echo "extern const u32" `(echo shader.vsh.shbin | sed -e 's/^\([0-9]\)/_\1/' | tr . _)`_size";" >> `(echo $(PREFIX)/src/render/3ds/shader.vsh.shbin | tr . _)`.h
	@rm $(PREFIX)/src/render/3ds/shader.vsh.shbin

install: $(TARGET_LIB)
	@mkdir -p "$(DEVKITPRO)/portlibs/3ds/lib"
	@cp  $(TARGET_LIB) "$(DEVKITPRO)/portlibs/3ds/lib"
	@mkdir -p "$(DEVKITPRO)/portlibs/3ds/include/SDL2"
	@cp $(PREFIX)/include/*.h "$(DEVKITPRO)/portlibs/3ds/include/SDL2"
	@echo "Installed!"

clean:
	@rm -rf $(OBJS) $(TARGET_LIB) $(PREFIX)/src/render/3ds/shader_vsh_shbin.h
