# -*- mode: makefile -*-

ifeq ($(strip $(DEVKITARM)),)
$(error "Please set DEVKITARM in your environment. export DEVKITARM=<path to>devkitARM")
endif

ifeq ($(strip $(DEVKITPRO)),)
$(error "Please set DEVKITPRO in your environment. export DEVKITPRO=<path to>devkitPRO")
endif


include $(DEVKITARM)/base_tools

TARGET_LIB = libSDL2_image.a

SDL_LIB_FILENAME = SDL2_image-2.0.5
SDL_LIB_FILENAME_CMP = SDL2_image-2.0.5.tar.gz
SDL_LIB_DOWNLOAD = https://www.libsdl.org/projects/SDL_image/release/$(SDL_LIB_FILENAME_CMP)


ifeq ($(wildcard $(SDL_LIB_FILENAME)),)
	@echo "Warning: $(SDL_LIB_FILENAME) not found! Please run: make fetch"
endif

DIR_PREFIX = $(SDL_LIB_FILENAME)

FETCH ?= curl -O
EXTRACT ?= tar -xzf

OBJS =	$(DIR_PREFIX)/showimage.o \
	$(DIR_PREFIX)/IMG_jpg.c \
	$(DIR_PREFIX)/IMG_png.c \
	$(DIR_PREFIX)/IMG.c \

CTRULIB	:= $(DEVKITPRO)/libctru
INCLUDES = -I./$(DIR_PREFIX)/ -I$(CTRULIB)/include

#---------------------------------------------------------------------------------
# options for code generation
#---------------------------------------------------------------------------------
ARCH		:=	-march=armv6k -mtune=mpcore -mfloat-abi=hard
CFLAGS		:=	-g -Wall -O2 -mword-relocations -fno-short-enums \
			-fomit-frame-pointer -ffast-math \
			$(ARCH)
CFLAGS		+=	-I$(DEVKITPRO)/portlibs/3ds/include/SDL2 $(INCLUDES) -DARM11 -D_3DS -D__3DS__ -DSDL_BUILDING_3DS
CXXFLAGS	:=      $(CFLAGS) -fno-rtti -fno-exceptions -std=gnu++11
ASFLAGS		:=	-g $(ARCH)
LDFLAGS		:=	-specs=3dsx.specs -g $(ARCH) -Wl,-Map,$(notdir $*.map)

CFLAGS		+= -Wno-unused-variable

LIBS	:= -lm -lSDL2 -lpng -ljpeg -lbz2

all: $(OBJS) $(TARGET_LIB)

fetch:
	@echo "Fetching $(SDL_LIB_FILENAME_CMP)..."
	@$(FETCH) $(SDL_LIB_DOWNLOAD)
	@echo "Extracting..."
	$(EXTRACT) $(SDL_LIB_FILENAME_CMP)
	@echo "Success!"

$(TARGET_LIB): $(OBJS)
	$(AR) -rc $@ $^

install: $(TARGET_LIB)
	@mkdir -p $(DEVKITPRO)/portlibs/3ds/lib
	@cp  $(TARGET_LIB) $(DEVKITPRO)/portlibs/3ds/lib
	@mkdir -p $(DEVKITPRO)/portlibs/3ds/include/SDL2
	@cp $(DIR_PREFIX)/SDL_image.h $(DEVKITPRO)/portlibs/3ds/include/SDL2
	@echo "Installed!"

clean:
	@rm -rf $(OBJS) $(TARGET_LIB) $(SDL_LIB_FILENAME_CMP)
